{% extends 'base.html.twig' %}

{% block title %}Delivery{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        table, th, td {
            border: 1px solid black;
            border-collapse:collapse;
            padding:1px;
        }
        .search {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 5px;
        }
        .flash {
            color: red;
            font-family: "Source Code Pro", "SFMono-Regular", Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
            font-size: large;
        }
    </style>

    <div class="example-wrapper">
        <h3>Delivery</h3>
        <hr>
        {% for message in app.flashes('error') %}
            <div class="flash search">
                {{ message }}
            </div>
        {% endfor %}
        <a href="{{ path('app_home') }}"> <- Back</a>
        <div class="search">
            <label for="search"> Search code</label>
            <form action="{{ path('app_delivery_document') }}" method="post">
                <input id="search" type="text" name="search">
            </form>
        </div>
        <table >
            <tr>
                <th width="50%">Code</th>
                <th width="50%">Name</th>
                <th>Unit</th>
            </tr>
            {% for w in warehouse.getWarehouses() %}
                {% for p in w.getProducts %}
                    <tr>
                        <td>{{ p.getProductCode }}</td>
                        <td>{{ p.name }}</td>
                        <td>{{ p.unit }}</td>
                    </tr>
                {% endfor %}
            {% endfor %}
        </table>
    </div>
{% endblock %}
